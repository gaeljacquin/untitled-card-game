{
  "name": "untitled-card-game",
  "description": "Untitled Card Game monorepo with API and web client",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "packageManager": "bun@1.2.23",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "preinstall": "node scripts/preinstall.js",
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "prepare": "husky",
    "localstack:start": "localstack start -d",
    "localstack:stop": "localstack stop",
    "localstack:status": "localstack status",
    "localstack:init": "./scripts/localstack-init.sh",
    "localstack:setup": "bun localstack:start && sleep 5 && bun localstack:init"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.9.1",
    "cspell": "^9.6.4",
    "husky": "^9.1.7"
  },
  "dependencies": {
    "tslib": "^2.8.1",
    "turbo": "^2.8.3"
  },
  "resolutions": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9"
  }
}
